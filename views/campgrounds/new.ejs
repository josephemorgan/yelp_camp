<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground.</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="test" placeholder="name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="test" placeholder="img url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="test" placeholder="Campground Description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btl-lg btn-primary btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>