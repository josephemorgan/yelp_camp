<%- include("../partials/header"); %>

<div class="row">
	<h1 style="text-align: center;">Edit <%= campground.name %><h1>
	<div style="width: 30%; margin: 30px auto;">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%= campground.name %>" name="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%= campground.image %>" name="image">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" value="<%= campground.price %>" name="price" step="0.01">
			</div>
			<div class="form-group">
				<textarea rows="10" class="form-control" name="description"><%= campground.description %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btl-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground.id %>/" class="btn btl-lg btn-secondary btn-block">Go Back</a>
	</div>
</div>

<%- include("../partials/footer"); %>
