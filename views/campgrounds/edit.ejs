<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %><h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="test" value="<%= campground.name %>" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="test" value="<%= campground.image %>" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="test" value="<%= campground.description %>" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btl-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id %>/" class="btn btl-lg btn-secondary btn-block">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>